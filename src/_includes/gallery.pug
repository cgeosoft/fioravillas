div(class='gallery')
  each photo in villa.photos
    a(href=`/img/villas/${villa.name}/${photo}` data-lightbox=`${villa.name}` data-title=`${villa.name}`)
      img(src=`/img/villas/${villa.name}/thumbs/${photo}` class='rounded shadow border w-100')

script(src="https://cdn.jsdelivr.net/npm/macy@2")

script.

  var macyInstance = Macy({
    container: '.gallery',
    trueOrder: false,
    waitForImages: false,
    mobileFirst: true,
    margin: 24,
    columns: 3,
    breakAt: {
      1200: 3,
      940: 2,
      520: 1,
      400: 1
    }
  });
