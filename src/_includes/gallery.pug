div(class='gallery')
  each photo in photos
    a(href=`/img/villas/${room}/${photo}` data-lightbox=`${room}` data-title=`${room}`)
      img(src=`/img/villas/${room}/${photo}` class='rounded shadow border w-100')

script(src="https://cdn.jsdelivr.net/npm/macy@2")

script.

  var macyInstance = Macy({
    container: '.gallery',
    trueOrder: false,
    waitForImages: false,
    mobileFirst: true,
    margin: 24,
    columns: 3,
    breakAt: {
      1200: 3,
      940: 2,
      520: 1,
      400: 1
    }
  });
